<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fhb.de.campusappevaluationexp"
    android:installLocation="preferExternal"
    >

    <uses-sdk tools:overrideLibrary="com.abhi.barcode.frag.libv2, com.commonsware.cwac.cam2" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />
    <uses-feature android:name="android.hardware.screen.landscape" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/app_theme"
        android:name="de.fhb.campusapp.eval.custom.CustomApplication"
        tools:replace="icon, theme" >
        <activity
            android:name="de.fhb.campusapp.eval.activities.ScanActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.fhb.campusapp.eval.activities.EvaluationActivity"
            android:label="@string/action_bar_title" >
        </activity>
        <!--<activity-->
            <!--android:name="de.fhb.campusapp.eval.activities.InnerSectionActivity"-->
            <!--android:label="@string/action_bar_title" >-->
        <!--</activity>-->
        <activity
            android:name="de.fhb.campusapp.eval.activities.EnlargeImageActivity"
            android:label="@string/action_bar_title" >
        </activity>

        <service
            android:name="de.fhb.campusapp.eval.custom.CustomJsonSpiceService"
            android:exported="false" />
        <service
            android:name="de.fhb.campusapp.eval.services.CleanUpService"
            android:exported="false"
            android:stopWithTask="false"
            />

    </application>

</manifest>
