<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fhb.de.campusappevaluationexp"
    android:installLocation="preferExternal">

    <uses-sdk tools:overrideLibrary="com.abhi.barcode.frag.libv2, com.commonsware.cwac.cam2, com.github.buchandersenn.android_permission_manager" />



    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />
    <uses-feature android:name="android.hardware.screen.landscape" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="de.fhb.campusapp.eval.custom.CustomApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_fhb_launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/app_theme"
        tools:replace="icon, theme">
        <activity
            android:name="de.fhb.campusapp.eval.activities.ScanActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name="de.fhb.campusapp.eval.ui.eval.EvaluationActivity"
            android:label="@string/action_bar_title"/>
        <activity
            android:name="de.fhb.campusapp.eval.activities.EnlargeImageActivity"
            android:label="@string/action_bar_title"/>
        <service
            android:name="de.fhb.campusapp.eval.services.CleanUpService"
            android:exported="false"
            android:stopWithTask="false" />

        <activity android:name="de.fhb.campusapp.eval.ui.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>