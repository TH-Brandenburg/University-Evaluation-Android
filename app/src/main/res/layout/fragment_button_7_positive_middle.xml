<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="de.fhb.campusapp.eval.ui.button.ButtonFragment"
    android:id="@+id/button_fragment_layout">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:id="@+id/question_text_view"
        android:maxLines="2"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="5"/> <!--alignStart-->

    <!--android:background="@drawable/button_bg"-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/question_text_view"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text=""
                android:id="@+id/top_button"
                android:minWidth="120dp"
                android:background="@drawable/very_negative_btn_state_list"
                android:textColor="@color/campusapptheme_color_bright_font"
                android:layout_above="@+id/upper_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="@dimen/button_margin_top_bottom"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text=""
                android:id="@+id/upper_button"
                android:background="@drawable/slightly_negative_btn_state_list"
                android:textColor="@color/campusapptheme_color_bright_font"
                android:minWidth="120dp"
                android:layout_above="@+id/upper_middle_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/button_margin_left_right"
                android:layout_marginStart="@dimen/button_margin_left_right"
                android:layout_marginBottom="@dimen/button_margin_top_bottom"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text=""
                android:id="@+id/upper_middle_button"
                android:background="@drawable/slightly_positive_btn_state_list"
                android:textColor="@color/campusapptheme_color_bright_font"
                android:minWidth="120dp"
                android:layout_above="@+id/middle_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/button_margin_left_right"
                android:layout_marginStart="@dimen/button_margin_left_right"
                android:layout_marginBottom="@dimen/button_margin_top_bottom"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text=""
                android:id="@+id/middle_button"
                android:background="@drawable/very_positive_btn_state_list"
                android:textColor="@color/campusapptheme_color_bright_font"
                android:minWidth="120dp"
                android:layout_above="@+id/lower_middle_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/button_margin_left_right"
                android:layout_marginStart="@dimen/button_margin_left_right"
                android:layout_marginBottom="@dimen/button_margin_top_bottom"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text=""
                android:id="@+id/lower_middle_button"
                android:background="@drawable/slightly_positive_btn_state_list"
                android:textColor="@color/campusapptheme_color_bright_font"
                android:minWidth="120dp"
                android:layout_above="@+id/lower_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/button_margin_left_right"
                android:layout_marginStart="@dimen/button_margin_left_right"
                android:layout_marginBottom="@dimen/button_margin_top_bottom"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text=""
                android:id="@+id/lower_button"
                android:background="@drawable/slightly_negative_btn_state_list"
                android:textColor="@color/campusapptheme_color_bright_font"
                android:minWidth="120dp"
                android:layout_above="@id/bottom_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/button_margin_left_right"
                android:layout_marginStart="@dimen/button_margin_left_right"
                android:layout_marginBottom="@dimen/button_margin_top_bottom"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text=""
                android:id="@+id/bottom_button"
                android:minWidth="120dp"
                android:background="@drawable/very_negative_btn_state_list"
                android:textColor="@color/campusapptheme_color_bright_font"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/button_margin_left_right"
                android:layout_marginStart="@dimen/button_margin_left_right"
                android:layout_marginBottom="@dimen/button_margin_top_bottom"
                />

            </RelativeLayout>
    </ScrollView>




</RelativeLayout>
