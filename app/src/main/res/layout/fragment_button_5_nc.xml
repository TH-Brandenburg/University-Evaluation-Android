<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/button_fragment_layout">
<!--tools:context="de.fhb.campusapp.eval.ui.button.ButtonFragment"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:id="@+id/question_text_view"
        android:maxLines="4"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="5"/> <!--alignStart-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/question_text_view"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <de.thb.ue.android.utility.customized_classes.CustomVerticalButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:paddingTop="10dp"
                android:text=""
                android:id="@+id/no_comment_button"
                android:lineSpacingMultiplier="0.9"
                android:minWidth="50dp"
                android:background="@drawable/no_comment_state_list"
                android:textColor="@color/color_dark_grey_font"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/button_margin_to_border"
                android:layout_marginEnd="@dimen/button_margin_to_border"
                android:layout_alignBottom="@+id/bottom_button"
                android:layout_alignTop="@+id/top_button" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAllCaps="false"
                android:text=""
                android:id="@+id/top_button"
                android:minWidth="120dp"
                android:background="@drawable/very_positive_btn_state_list"
                android:textColor="@color/color_bright_font"
                android:layout_marginLeft="@dimen/button_margin_to_border"
                android:layout_marginStart="@dimen/button_margin_to_border"
                android:layout_marginBottom="@dimen/button_margin_to_border"
                android:layout_above="@+id/upper_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/no_comment_button"
                android:layout_toStartOf="@+id/no_comment_button" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAllCaps="false"
                android:text=""
                android:id="@+id/upper_button"
                android:minWidth="120dp"
                android:background="@drawable/positive_btn_state_list"
                android:textColor="@color/color_bright_font"
                android:layout_marginLeft="@dimen/button_margin_to_border"
                android:layout_marginStart="@dimen/button_margin_to_border"
                android:layout_marginBottom="@dimen/button_margin_to_border"
                android:layout_above="@+id/middle_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/no_comment_button"
                android:layout_toStartOf="@+id/no_comment_button" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAllCaps="false"
                android:text=""
                android:id="@+id/middle_button"
                android:minWidth="120dp"
                android:background="@drawable/neutral_btn_state_list"
                android:textColor="@color/color_grey_font"
                android:layout_marginLeft="@dimen/button_margin_to_border"
                android:layout_marginStart="@dimen/button_margin_to_border"
                android:layout_marginBottom="@dimen/button_margin_to_border"
                android:layout_above="@+id/lower_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/no_comment_button"
                android:layout_toStartOf="@+id/no_comment_button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAllCaps="false"
                android:text=""
                android:id="@+id/lower_button"
                android:minWidth="120dp"
                android:background="@drawable/negative_btn_state_list"
                android:textColor="@color/color_bright_font"
                android:layout_marginLeft="@dimen/button_margin_to_border"
                android:layout_marginStart="@dimen/button_margin_to_border"
                android:layout_marginBottom="@dimen/button_margin_to_border"
                android:layout_above="@+id/bottom_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/no_comment_button"
                android:layout_toStartOf="@+id/no_comment_button" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAllCaps="false"
                android:text=""
                android:id="@+id/bottom_button"
                android:minWidth="120dp"
                android:background="@drawable/very_negative_btn_state_list"
                android:textColor="@color/color_bright_font"
                android:layout_marginLeft="@dimen/button_margin_to_border"
                android:layout_marginStart="@dimen/button_margin_to_border"
                android:layout_marginBottom="@dimen/button_margin_to_border"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/no_comment_button"
                android:layout_toStartOf="@+id/no_comment_button" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
