<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/text_fragment_root_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="1000"
        android:text=""
        android:textSize="24sp"
        android:id="@+id/question_text_view"
        android:maxLines="4"
        android:minLines="4"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/question_text_view"
        android:fillViewport="true"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/edit_text_click_hint_photo"
                android:imeOptions="actionNext|flagNoEnterAction"
                android:inputType="textMultiLine" />

            <android.support.v7.widget.CardView
                android:id="@+id/thumbnail_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/parent_margin_vertical"
                android:layout_marginEnd="@dimen/parent_margin_vertical"
                android:layout_marginRight="@dimen/parent_margin_vertical"
                android:layout_marginStart="@dimen/parent_margin_vertical"
                android:layout_marginTop="@dimen/parent_margin_vertical"
                android:clickable="false">

                <ProgressBar
                    android:id="@+id/image_progress_bar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:alpha="1"
                    android:indeterminate="true"
                    android:visibility="gone" />

                <de.thb.ue.android.utility.customized_classes.BaseButton
                    android:id="@+id/delete_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/comment_thumbnail"
                    android:layout_alignRight="@+id/comment_thumbnail"
                    android:layout_alignTop="@+id/comment_thumbnail"
                    android:visibility="gone" />

                <de.thb.ue.android.utility.customized_classes.BaseButton
                    android:id="@+id/camera_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="{faw-camera} "
                    android:textColor="@color/color_white_background"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/comment_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/margin_content_area_vertical"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/margin_content_area_vertical"
                    android:alpha="1"
                    android:background="#ffededed"
                    android:clickable="true"
                    android:visibility="gone" />

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

     <!--<include layout="@layout/include_progress_overlay"/>-->

</RelativeLayout>