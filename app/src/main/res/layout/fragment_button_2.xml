<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="de.fhb.campusapp.eval.ui.button.ButtonFragment"
    android:id="@+id/button_fragment_layout">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:id="@+id/question_text_view"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="5"/> <!--alignStart-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text=""
        android:id="@+id/top_button"
        android:minWidth="120dp"
        android:background="@drawable/very_positive_btn_state_list"
        android:textColor="@color/campusapptheme_color_bright_font"
        android:layout_marginLeft="@dimen/button_margin_left_right"
        android:layout_above="@+id/bottom_button"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/no_comment_button"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text=""
        android:id="@+id/bottom_button"
        android:minWidth="120dp"
        android:background="@drawable/very_negative_btn_state_list"
        android:textColor="@color/campusapptheme_color_bright_font"
        android:layout_marginLeft="@dimen/button_margin_left_right"
        android:layout_marginStart="@dimen/button_margin_left_right"
        android:layout_marginBottom="@dimen/button_margin_top_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/top_button" />

</RelativeLayout>
