<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.fhb.campusapp.eval.activities.EnlargeImageActivity">

    <include
        layout="@layout/include_toolbar"
        android:id="@+id/my_awesome_toolbar_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/enlarged_image_view"
        android:layout_below="@+id/my_awesome_toolbar_2"
        android:visibility="visible"
        android:alpha="1"
        android:background="#ff000001" />

</RelativeLayout>
